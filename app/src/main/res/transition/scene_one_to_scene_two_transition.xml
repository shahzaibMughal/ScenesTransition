<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">

    <changeBounds
        android:duration="250"
        android:interpolator="@android:interpolator/linear">
        <targets>
            <target android:targetId="@+id/product_image" />
        </targets>
    </changeBounds>
    <changeImageTransform android:duration="250">
        <targets>
            <target android:targetId="@+id/product_image" />
        </targets>
    </changeImageTransform>
    <fade
        android:duration="250"
        android:fadingMode="fade_in"
        android:startDelay="250">
        <targets>
            <target android:targetId="@+id/description" />
            <target android:targetId="@+id/closeBtn" />
            <target android:targetId="@+id/infoBtn" />
        </targets>
    </fade>
    <fade
        android:duration="100"
        android:fadingMode="fade_out">
        <targets>
            <target android:targetId="@+id/infoBtn" />
            <target android:targetId="@+id/description" />
            <target android:targetId="@+id/closeBtn" />
        </targets>
    </fade>
    <changeTransform android:duration="250">
        <targets>
            <target android:targetId="@+id/title" />
        </targets>

    </changeTransform>

</transitionSet>